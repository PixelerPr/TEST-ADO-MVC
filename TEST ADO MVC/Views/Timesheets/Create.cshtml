@model TEST_ADO_MVC.Models.Timesheets

@{
    ViewData["Title"] = "Создать запись";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]?.ToString()</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
        <div class="alert alert-danger">
            <b>Error : </b>@errorMessage
            <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}
<form action="Create" method="post" class="mt-3" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Идентификатор</label>
        <input type="text" class="form-control" asp-for="id" />
        <span asp-validation-for="id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Сотрудник</label>
        <input type="text" class="form-control" asp-for="employee" />
        <span asp-validation-for="employee" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Причина отсутствия</label>
        <select asp-for="reason">
@*            @for(int i = 0;i<4;i++)
            {
                <option selected="selected" value="@i">@i</option>
            }*@
            <option selected="selected" disabled="disabled">Выберите причину </option>
            <option selected="selected" value="1">Отпуск</option>
            <option selected="selected" value="2">Больничный</option>
            <option selected="selected" value="3">Прогул</option>
        </select>
        <span asp-validation-for="reason" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Дата начала</label>
        <input type="date" class="form-control" asp-for="start_date" />
        <span asp-validation-for="start_date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Продолжительность(раб.дней)</label>
        <input type="text" class="form-control" asp-for="duration" />
        <span asp-validation-for="duration" class="text-danger"></span>
    </div>
    <div class="mb-1">
        <label class="form-label">Учтено при оплате</label>
        <input type="checkbox" asp-for="discounted" />
        <span asp-validation-for="discounted" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Комментарий</label>
        <input type="text" class="form-control" asp-for="description" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}